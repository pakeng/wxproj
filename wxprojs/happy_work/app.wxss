/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #ffeb3b;
  flex: 1;
} 

page {
  height: 100%;
  display: flex;
}

.button_container {
  width: 50%;
  margin-top: 80px;
  padding: 15px;
  background: #fff9c4;
  border-radius: 15px;
}

.dark_y_button {
  margin-top: 5px;
  background: #ff4081;
  border-radius: 10px;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #212121;
}