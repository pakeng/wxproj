/* pages/testview/testview.wxss */

.full_screen_container {
    margin: 15px;
    padding: 2px 2px 0px 5px;
    height: 70px;
    background-color: #eee;
}

.item_with_bottom_border {
      margin-top: 5px;
      border-width: 2px;
      width: 100%;
      border-bottom-style: solid;
      border-color: green;
}

.item_img {
  height: 50px;
  width: 70px;
  background: greenyellow;
  align-items: center;
}

.title_text_container {
  width: 70%;
  margin-top: 2px;
  margin-left: 10px;
  display : inline-block;
  vertical-align: top;
  background-color: #fff;
}

.title_content {
  font-size: 15px;
  color: black;
  text-shadow: #ccc 1px 1px;
  align-content: center;

}

.desc_content {
    display : inline-block;
    font-size: 12px;
    margin-top: 8px;
    color: #ccc;
}

.desc_container {
  display : inline;
}

.desc_date {
  margin: 2px 5px 0px 0px;
  float: right;
  font-size: 10px;
  color: #ccc;
}